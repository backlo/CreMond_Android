<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBackgroundColor"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_rounded"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/animal_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:src="@drawable/animal_rabbit" />

                    <TextView
                        android:id="@+id/animal_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.05"
                        android:fontFamily="@font/notosans"
                        android:gravity="center"
                        android:text="동물"
                        android:textSize="@dimen/mainfontsize" />

                    <ImageView
                        android:id="@+id/job_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:src="@drawable/job_artist" />

                    <TextView
                        android:id="@+id/job_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.05"
                        android:fontFamily="@font/notosans"
                        android:gravity="center"
                        android:text="직업"
                        android:textSize="@dimen/mainfontsize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:weightSum="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/body_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:src="@drawable/body_mouth" />

                        <TextView
                            android:id="@+id/body_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/notosans"
                            android:gravity="center"
                            android:text="신체"
                            android:textSize="@dimen/mainfontsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/objects_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:src="@drawable/objects_balloon" />

                        <TextView
                            android:id="@+id/objects_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/notosans"
                            android:gravity="center"
                            android:text="사물"
                            android:textSize="@dimen/mainfontsize" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:padding="20dp"
                    android:src="@drawable/main_image" />

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/color_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/color_yellow" />

                        <TextView
                            android:id="@+id/color_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/notosans"
                            android:gravity="center"
                            android:text="색깔"
                            android:textSize="@dimen/mainfontsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/vehicle_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:src="@drawable/vehicle_spaceship" />

                        <TextView
                            android:id="@+id/vehicle_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/notosans"
                            android:gravity="center"
                            android:text="탈것"
                            android:textSize="@dimen/mainfontsize" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"/>


                <ImageView
                    android:id="@+id/plant_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:src="@drawable/plant_strawberry" />

                <TextView
                    android:id="@+id/plant_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"
                    android:fontFamily="@font/notosans"
                    android:gravity="center"
                    android:text="식물"
                    android:textSize="@dimen/mainfontsize" />

                <ImageView
                    android:id="@+id/number_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:src="@drawable/number_hundred" />

                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"
                    android:fontFamily="@font/notosans"
                    android:gravity="center"
                    android:text="숫자"
                    android:textSize="@dimen/mainfontsize" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3">

                    <ImageView
                        android:id="@+id/qr_code"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right|bottom"
                        android:layout_margin="15dp"
                        android:src="@drawable/qr_code_image" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>